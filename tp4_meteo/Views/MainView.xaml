<Window x:Class="tp4_meteo.Views.MainView"
         x:Name="win"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:local="clr-namespace:tp4_meteo.Views"
 xmlns:viewModel="clr-namespace:tp4_meteo.ViewModels"
 mc:Ignorable="d"
 Title="Détecteur de langue"
 Height="520" Width="880"
 WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Configuration" Command="{Binding OpenSettingsCommand}"/>
                <Separator/>
                <MenuItem Header="_Quitter" Command="{Binding CloseCommand}" />
            </MenuItem>
        </Menu>

        <local:WeatherView Grid.Row="1" DataContext="{Binding WeatherVM}" />
    </Grid>
</Window>