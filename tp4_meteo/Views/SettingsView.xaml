<Window x:Class="tp4_meteo.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <StackPanel Margin="20">
        <TextBlock Text="Clé API WeatherBit :" FontWeight="SemiBold"/>
        <TextBox Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Padding="5"/>

        <TextBlock Text="Langue :" FontWeight="SemiBold"/>
        <TextBox Text="{Binding Language}" Margin="0,5,0,20" Padding="5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Fermer" Command="{Binding CloseCommand}" Width="80" IsCancel="True"/>
            <Button Content="Sauvegarder" Command="{Binding SaveCommand}" Width="100" Margin="10,0,0,0" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>