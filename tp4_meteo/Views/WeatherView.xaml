<UserControl x:Class="tp4_meteo.Views.WeatherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:tp4_meteo.Views.Converters">
    <UserControl.Resources>
        <c:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Régions" FontWeight="Bold"/>
            <ListBox Grid.Row="1" ItemsSource="{Binding Regions}" SelectedItem="{Binding SelectedRegion}" DisplayMemberPath="Nom"/>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <TextBox Text="{Binding NewNom}" ToolTip="Nom"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding NewLat}" Width="120" ToolTip="Lat"/>
                    <TextBox Text="{Binding NewLon}" Width="120" ToolTip="Lon"/>
                </StackPanel>
                <Button Content="Ajouter" Command="{Binding AddRegionCommand}"/>
                <Button Content="Supprimer" Command="{Binding DeleteRegionCommand}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2">
            <StackPanel Visibility="{Binding SelectedRegion, Converter={StaticResource BoolToVisConverter}}">
                <TextBlock Text="{Binding SelectedRegion.Nom}" FontSize="24" FontWeight="Bold"/>
                <ListView ItemsSource="{Binding Previsions}" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}"/>
                            <GridViewColumn Header="Max" DisplayMemberBinding="{Binding HighTemp}"/>
                            <GridViewColumn Header="Min" DisplayMemberBinding="{Binding LowTemp}"/>
                            <GridViewColumn Header="Temps" DisplayMemberBinding="{Binding Weather.Description}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>